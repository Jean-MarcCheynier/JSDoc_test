{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": [
      "./src"
    ]
  },
  "plugins": [
    "plugins/markdown",
    "node_modules/better-docs/component"
  ],
  "opts": {
    "encoding": "utf8",
    "destination": "public/docs/",
    "recurse": true,
    "verbose": true,
    "template": "./node_modules/better-docs"
  },
  "templates": {
    "better-docs": {
      "name": "My React components",
      "component": {
        "wrapper": "./src/WrapperDocExample.js"
      }

    }
  }
}